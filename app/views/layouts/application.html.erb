<!DOCTYPE html>
<html>
  <head>
    <title>Cats99</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>

    <% if flash[:errors] %>
      <h3>ERROR!</h3>
      <ul>
        <% flash[:errors].each do |error| %>
          <li>
            <%= error %>
          </li>
        <% end%>
      </ul>
    <% end %>

    <%= yield %>

  </body>
</html>
